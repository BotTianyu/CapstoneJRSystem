@model IEnumerable<JRSystem.Models.Referral>

@{
    ViewData["Title"] = "Index";
}

<h1>Find the Referral you want! ;)</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReferralName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferralDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReferralName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferralDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReferralId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReferralId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReferralId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
