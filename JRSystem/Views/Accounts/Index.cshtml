@model IEnumerable<JRSystem.Models.Account>

@{
    ViewData["Title"] = "Admin page: Accounts";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" style="text-decoration: none;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SetupTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SetupTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.AccountId" style="text-decoration: none; margin-left:15px">
